<!DOCTYPE html>
<html lang="en">
  <head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </head>
  <body>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Album Name</th>
                    <th scope="col">Artist</th>
                    <th scope="col">Genre</th>
                    <th scope="col"><form method="post"><button class="btn btn-dark" formaction="/sort">Year</button></form></th>
                    <th scope="col">Rating</th>
                    <th scope="col">Condition</th>
                    <th scope="col">Price</th>
                    <th scope="col">Last Played</th>
                    <th scope="col">Update/Delete</th>
                </tr>
            </thead>
            <tbody>
                {{#records}}
                <tr>
                    <td>{{album_name}}</td>
                    <td>{{artist}}</td>
                    <td>{{genre}}</td>
                    <td>{{year}}</td>
                    <td>{{rating}}</td>
                    <td>{{condition}}</td>
                    <td>{{price}}</td>
                    <td>{{last_played}}</td>
                    <td>
                        <form method="POST">
                        
                        <button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#exampleModal">Update Record</button>
                        </form>
                        <form method="POST" action="/update/{{rowid}}">
                            <input type="hidden" name="rowid" value="{{rowid}}">
                            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="exampleModalLabel">Update Record</h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <label class="form-label">Album Name</label>
                                            <input type="text" class="form-control" name="album_name">

                                            <label for="validationCustom01" class="form-label">Artist</label>
                                            <input type="text" class="form-control" name="artist">

                                            <label for="validationCustom01" class="form-label">Genre</label>
                                            <input type="text" class="form-control" name="genre">

                                            <label for="validationCustom01" class="form-label">Year</label>
                                            <input type="number" class="form-control" name="year">

                                            
                                            <label for="validationCustom04" class="form-label">Rating</label>
                                            <select class="form-select" id="validationCustom04" name=rating >
                                            <option selected disabled value="">Choose...</option>
                                            <option>1</option>
                                            <option>2</option>
                                            <option>3</option>
                                            <option>4</option>
                                            <option>5</option>
                                            <option>6</option>
                                            <option>7</option>
                                            <option>8</option>
                                            <option>9</option>
                                            <option>10</option>
                                            </select>

                                            <label for="validationCustom04" class="form-label">Condition</label>
                                            <select class="form-select" id="validationCustom04" name=condition>
                                            <option selected disabled value="">Choose...</option>
                                            <option>Perfect</option>
                                            <option>Good</option>
                                            <option>Fair</option>
                                            <option>Bad</option>
                                            </select>

                                            <label for="validationCustom01" class="form-label">Price</label>
                                            <input type="decimal" class="form-control" name="price">
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            <button type="submit" class="btn btn-dark">Save changes</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <form method="POST"><button id={{rowid}} class="btn btn-danger" formaction="/deleterecord/{{rowid}}">Delete</button></form>
                        <form method="POST"><button id={{rowid}} class="btn btn-dark"" formaction="/last_played/{{rowid}}">Played</button></form>
                    </td>
                </tr>
                {{/records}}
            </tbody>
        </table>
    </div>
  </body>
</html>
